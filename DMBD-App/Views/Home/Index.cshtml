					<form asp-action="Save" method="post" asp-controller="Student" class="row g-3">
						<div class="col-md-6">
							<label asp-for="Name" class="form-label">Ad</label>
							<input asp-for="Name" class="form-control" required maxlength="50" pattern="^[A-Za-zğüşöçİĞÜŞÖÇ\s]{2,}$" title="Ad bilgisi en az 2 karakter olmalı ve özel karakterler veya rakamlar içermemelidir." />

