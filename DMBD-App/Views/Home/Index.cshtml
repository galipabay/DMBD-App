						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
							<label class="form-check-label" for="flexCheckDefault">
								Yukarıdaki bilgileri okudum ve onaylıyorum.
							</label>
						</div>

						<script>
							// Sayfa yüklendiğinde checkbox durumunu kontrol et
							$(document).ready(function () {
								// Checkbox durumunu dinle
								$('#flexCheckDefault').change(function () {
									// Checkbox seçili ise
									if ($(this).is(':checked')) {
										// Kaydet butonunu etkinleştir
										$('#showPopup').prop('disabled', false);
									} else {
										// Checkbox seçili değilse, kaydet butonunu devre dışı bırak
										$('#showPopup').prop('disabled', true);
									}
								});

								// Sayfa yüklendiğinde checkbox durumunu ilk kez kontrol et
								if ($('#flexCheckDefault').is(':checked')) {
									$('#showPopup').prop('disabled', false);
								} else {
									$('#showPopup').prop('disabled', true);
								}
							});
						</script>
						<!--Checkbox bitiş-->


