@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model DMBD.Kernel.Model.AdminUser
@section HeaderContent {
    <p style="font-size: large;">Yönetim Paneli Ekranı</p>
}

<!--İÇERİK BAŞLANGICI-->
<div class="container-list">
    <h3 class="text-mainpanel">Yönetici Listele</h3>
    <table class="table-list text-center">
        <thead>
            <tr>
                <div class="row ">
                <th scope="col-sm-3">Ad</th>

                <th scope="col-sm-3">Soyad</th>

                <th scope="col-sm-3">E-mail</th>

                <th scope="col-sm-3">Araç</th>
</div><!--row-->
              </tr>
            </thead>
<tbody>
    <tr>
        <form asp-action="List" method="post" asp-controller="AdminUser">
        <td><input asp-for="Name" class="form-control" readonly disabled /></td>
        <td><input asp-for="Surname" class="form-control" readonly disabled /></td>
        <td><input asp-for="MailAddres" class="form-control" readonly disabled /></td>
        </form>
        <!--butona silme işlevi atanacak-->
        <td><button type="submit" onclick="deletee()" class="btn btn-primary">Sil</button></td>
    </tr>
</tbody>
          </table>
    </div><!--container-list-->