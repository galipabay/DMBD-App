<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>ETÜ Muafiyet Başvurusu</title>
	<link rel="icon" type="~/image/x-icon" href="~/assets/images/favicon.ico" />
	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

	<!-- jQuery UI -->
	<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

	<!-- Diğer stil dosyaları ve scriptler -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
		  rel="stylesheet"
		  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
		  crossorigin="anonymous" />
	<script defer
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"></script>
	<!--<script src="main.js"></script>-->

	<link rel="stylesheet" href="~/assets/css/style.css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
</head>
<body>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>


	<!--NAVBAR-HEADER-->
	<nav class="navbar navbar-expand-xxl navbar-light" style="background-color: #456097">
		<div class="container-fluid">
			<a href="@Url.Action("Index", "Home")" class="navbar-brand">
				<img src="~/assets/images/etuLogo.png" alt="ETÜ Logo" style="width: 5rem" class="rounded-pill" />
			</a>
			<div class="navbar-text mx-auto text-center">
				<h4>
					ERZURUM TEKNİK ÜNİVERSİTESİ MÜHENDİSLİK VE MİMARLIK FAKÜLTESİ<h4>
						@RenderSection("HeaderContent", required: false)
			</div>

			<!-- Sayfa içeriği -->
			<div id="result" style="display:none;"></div>

			<!-- Diğer HTML içeriği -->
			<!-- Scriptler -->
			<script type="text/javascript">
				$(document).ready(function () {
					$("#result").dialog({
						autoOpen: false,
						title: 'Title',
						width: 500,
						height: 'auto',
						modal: true
					});
				});

				function openPopup() {
					$("#result").dialog("open");
				}
			</script>

			<!--Yönetici Paneli Giriş Butonu-->
			<div class="d-grid gap-2 d-md-flex justify-content-md">
				<button class="btn btn-primary me-md-2" onclick="admin()" type="button">Yönetim Paneli</button>
			</div>
			<script>
				function admin() {
					window.location.href = "/Home/AdminPanelLogin";
				}
			</script>

			<!--Kolay Ulaşım Amaçlı Yönetici Paneli Anasayfası-->
			<div class="d-grid gap-2 d-md-flex justify-content-md">
				<button class="btn btn-primary me-md-2" onclick="adminSil()" type="button" style="background-color: #456097; color: white; border: 2px solid #bad1da; border-radius: 10px;">Yönetim Paneli Anasayfa</button>
			</div>
			<script>
				function adminSil() {
					window.location.href = "/Home/AdminPanel";
				}
			</script>

			<!--Kolay Ulaşım Amaçlı Subject-->
			<div class="d-grid gap-2 d-md-flex justify-content-md-center">
				<button class="btn btn-primary me-md-2" onclick="redirectToSubject()" type="button" style="background-color: #456097; color: white; border: 2px solid #bad1da; border-radius: 10px;">Subject</button>
			</div>
			<script>
				function redirectToSubject() {
					window.location.href = '@Url.Action("Index", "Student")';
				}
			</script>


			<!--Kolay Ulaşım Amaçlı PDF Ekranı-->
			<div class="d-grid gap-2 d-md-flex justify-content-md">
				<button class="btn btn-primary me-md-2" onclick="pdfkisayol()" type="button" style="background-color: #456097; color: white; border: 2px solid #bad1da; border-radius: 10px;">PDF Kısayol</button>
			</div>
			<script>
				function pdfkisayol() {
					window.location.href = "/Home/PdfScreen";
				}
			</script>

			<!--Kolay Ulaşım Amaçlı Index Ekranı-->
			<div class="d-grid gap-2 d-md-flex justify-content-md">
				<button class="btn btn-primary me-md-2" onclick="index()" type="button" style="background-color: #456097; color: white; border: 2px solid #bad1da; border-radius: 10px;">Index Kısayol</button>
			</div>
			<script>
				function index() {
					window.location.href = "/Home/Index";
				}
			</script>

		</div>





	</nav>
	<!--NAVBAR-HEADER BİTİŞ-->
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
